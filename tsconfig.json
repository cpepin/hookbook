{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "lib": ["esnext", "dom"],
    "declaration": true,
    "declarationDir": "lib"
  },
  "exclude": ["**/*.spec.ts"]
}